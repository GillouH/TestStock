<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestStock" parent="Theme.AppCompat.NoActionBar">
        <!-- Couleur de la barre de notification -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Taille standard du texte -->
        <item name="android:textSize">15sp</item>
        <!-- Couleur standard des boutons dans l'action bar -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Général -->

    <style name="Activity">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:orientation">vertical</item>
        </style>

        <style name="Contenu">
            <item name="android:layout_marginLeft">5sp</item>
            <item name="android:layout_marginRight">5sp</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:orientation">vertical</item>
        </style>

        <style name="TextView">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <style name="ItemName" parent="TextView">
            <item name="android:text">@string/item_name</item>
            <item name="android:textSize">20sp</item>
        </style>

    <!-- Général /-->

    <!-- Action Bar -->

        <style name="ActionBar">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">56dp</item>
            <item name="android:background">@color/colorPrimary</item>
            <item name="titleTextAppearance">@style/Action_Bar_Title</item>
        </style>

        <style name="Action_Bar_Title">
            <item name="android:textSize">25sp</item>
            <item name="android:textColor">@color/white</item>
        </style>

    <!-- Action Bar /-->

    <!-- Main Activity -->

        <style name="MainActivity_ActionBar" parent="ActionBar">
            <item name="title">@string/app_name</item>
        </style>

        <style name="MainActivity_ItemListe">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <!-- Item Adapter -->

            <style name="MainActivity_ItemAdapter" parent="Activity">
                <item name="android:layout_height">wrap_content</item>
                <item name="android:gravity">center</item>
            </style>

            <style name="MainActivity_ItemAdapter_ItemName" parent="ItemName">
                <item name="android:textColor">@color/colorPrimary</item>
            </style>

            <style name="MainActivity_ItemAdapter_Divider">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:src">@drawable/divider</item>
            </style>

        <!-- Item Adapter /-->

    <!-- Main Activity /-->

    <!-- Item Detail Activity -->

        <style name="ItemDetailActivity_ActionBar" parent="ActionBar">
            <item name="navigationIcon">?attr/homeAsUpIndicator</item>
            <item name="title">@string/itemDetailActivity_title</item>
        </style>

        <style name="ItemDetailActivity_ItemName" parent="ItemName"></style>

        <style name="ItemDetailActivity_Section">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
        </style>

        <style name="ItemDetailActivity_ItemBasic_Label" parent="TextView">
            <item name="android:text">@string/quantityUnit_label</item>
        </style>

        <style name="ItemDetailActivity_Value" parent="TextView">
            <item name="android:paddingLeft">50sp</item>
        </style>

        <style name="ItemDetailActivity_ItemBasic_Value" parent="ItemDetailActivity_Value">
            <item name="android:text">@string/quantityUnit_value</item>
        </style>

        <style name="ItemDetailActivity_ItemPack_QuantityOut_Label" parent="TextView">
            <item name="android:text">@string/quantityOut_label</item>
        </style>

        <style name="ItemDetailActivity_ItemPack_QuantityOut_Value" parent="ItemDetailActivity_Value">
            <item name="android:text">@string/quantityOut_value</item>
        </style>

        <style name="ItemDetailActivity_ItemPack_NbPack_Label" parent="TextView">
            <item name="android:text">@string/nbPack_Label</item>
        </style>

        <style name="ItemDetailActivity_ItemPack_NbPack_Value" parent="ItemDetailActivity_Value">
            <item name="android:text">@string/nbPack_value</item>
        </style>

    <!-- Item Detail Activity /-->

</resources>