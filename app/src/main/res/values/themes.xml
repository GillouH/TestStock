<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Theme.TestStock" parent="Theme.AppCompat.NoActionBar">
        <!-- Couleur de la barre de notification -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>
        <!-- Taille standard du texte -->
        <item name="android:textSize">15sp</item>
        <!-- Couleur standard des boutons dans l'action bar -->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- Couleur de fond des activitées -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Base application theme. /-->

    <!-- Composant Quantity Manager -->

    <style name="QuantityManager_Elements">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- Composant Quantity Manager /-->

    <!-- Général -->

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="TextView.Value">
        <item name="android:layout_marginLeft">50sp</item>
    </style>

    <style name="EditText" parent="TextView.Value">
        <item name="singleLine">true</item>
    </style>

    <style name="EditText.Text">
        <item name="android:layout_width">200dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Number">
        <item name="android:layout_width">40dp</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/number0</item>
    </style>

    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Activity" parent="Root">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Section.Principal">
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.LabelValue">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container.ValueUnit">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="maxImageSize">48dp</item>
    </style>

    <!-- Général /-->

    <!-- ToolBar -->

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolBar_Title</item>
    </style>

    <style name="ToolBar.NotMainActivity">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="ToolBar_Title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ToolBar /-->

    <!-- Item Detail Activity -->

    <style name="ItemDetailActivity_QuantityManager" parent="Container">
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Item Detail Activity /-->

</resources>