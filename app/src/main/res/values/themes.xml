<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestStock" parent="Theme.AppCompat.NoActionBar">
        <!-- Couleur de la barre de notification -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Taille standard du texte -->
        <item name="android:textSize">15sp</item>
        <!-- Couleur standard des boutons -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemName">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainActivityItemList" parent="ItemName">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Contenu">
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
    </style>

    <style name="Value">
        <item name="android:paddingLeft">50sp</item>
    </style>

</resources>