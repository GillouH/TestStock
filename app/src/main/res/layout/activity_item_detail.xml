<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controllers.ItemDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activityItemDetail_toolbar"
        style="@style/ActionBar"
        android:layout_width="match_parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/itemDetailActivity_title"
        app:titleTextAppearance="@style/ActivityTitle" />

    <LinearLayout
        style="@style/Contenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activityItemDetail_textView_itemName"
            style="@style/ItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_item_name" />

        <LinearLayout
            android:id="@+id/activityItemDetail_linearLayout_itemBasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_item_quantityUnitLabel" />

            <TextView
                android:id="@+id/activityItemDetail_textView_itemQuantityUnitValue"
                style="@style/Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_item_quantityUnitValue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activityItemDetail_linearLayout_itemPack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_itemQuantityOutLabel" />

                <TextView
                    android:id="@+id/activityItemDetail_textView_itemQuantityUnitOutValue"
                    style="@style/Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_itemQuantityOutValue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_nbPackLabel" />

                <TextView
                    android:id="@+id/activityItemDetail_textView_nbPackValue"
                    style="@style/Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_nbPackValue" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
